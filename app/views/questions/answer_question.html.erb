<div>
  <div class="container-fluid col-md-4 text-center">
    <% level = (@game.level == 0) ? 'BONUS ROUND' : @game.level %>
    <h3><kbd>Score: <%= @game.score %><kbd></h3>
    <h5><kbd>Round:  <%= level %>, Question: <%= @game.question_count %><kbd></h3>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h3><%= @question.value %></h3>
        </div>
        <div class="modal-body">
          <div class="col-xs-3 5"> </div>
          <div class="quiz" id="quiz">
            <% if @is_correct == 'Correct!' %>
              <label class="element-animation1 btn btn-lg btn-success btn-block">
            <% else %>
              <label class="element-animation1 btn btn-lg btn-danger btn-block">
            <% end %>
              <span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span>
              <p>Correct Answer: <%= @correct_answer.value %></p>
              <p>User Answer: <%= @active_answer.value %></p>
              <p>Result: <%= @is_correct %></p>
              <%= link_to 'Next Question', games_play_path, method: :post, class: "btn btn-dark" %>
            </label>
          </div>
        </div>
      </div>
      <div>
      </div>
    </div>
    <div class="container-fluid col-md-4 text-center mt-5">
      <div class="row mt-5"></div>
      <div class="row mt-5"></div>
      <%= link_to "New Game", welcome_index_path, class: "btn btn-success" %>
    </div>
  </div>
</div>